@model IEnumerable<SzakdolgozatAppMvc.Models.UserModel>
    @using GridMvc.Html
@{
    ViewBag.Title = "Grid";
}


<div class="User_collapse">
    @Html.Grid(Model).Columns(Columns =>
{
    Columns.Add(c => c.Id).Titled("Id").Filterable(true);
    Columns.Add(c => c.Name).Titled("Név").Filterable(true);
    Columns.Add(c => c.Address).Titled("Irányítószám").Filterable(true);
    Columns.Add(c => c.City).Titled("Város").Filterable(true);
    Columns.Add().Encoded(false).Sanitized(false).SetWidth(30).RenderValueAs(o => Html.ActionLink("Edit", "Edit", new { id = o.Id }));
}).WithPaging(10)
</div>

